Bootstrap: docker
From: ubuntu:24.04

%files
    requirements.txt


%post
    /bin/bash
    apt-get update
    apt-get -y install --no-install-recommends python3 python3-venv pip git ca-certificates
    apt-get clean
    rm -rf /var/lib/apt/lists/*

    python3 -m venv venv
    venv/bin/pip install -r requirements.txt

